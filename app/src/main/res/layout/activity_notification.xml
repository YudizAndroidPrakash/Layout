<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity"
    android:padding="20dp">
    
    
    <Button
        android:id="@+id/btnNormalNotColl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collapsable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btnNormalNotExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expandable"
        app:layout_constraintStart_toStartOf="@id/btnNormalNotColl"
        app:layout_constraintTop_toBottomOf="@id/btnNormalNotColl"
        />
    
    

</androidx.constraintlayout.widget.ConstraintLayout>