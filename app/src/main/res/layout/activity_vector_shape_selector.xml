<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VectorShapeSelector"
    android:padding="10dp"
    >
    <EditText
        android:id="@+id/etDemo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        android:padding="10dp"
        />

    <ImageView
        android:id="@+id/imgView"
        android:src="@drawable/hover_selector_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/etDemo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        />
    <CheckBox
        android:id="@+id/cb_termsconditions"
        android:text="Terms and Conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textColor="@color/shape_border_color"
        app:layout_constraintTop_toBottomOf="@id/imgView"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/btnHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shape_border_color"
        android:text="Hello"
        app:layout_constraintTop_toBottomOf="@id/cb_termsconditions"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/half_round"
        app:layout_constraintStart_toStartOf="@id/etDemo"
        app:layout_constraintTop_toBottomOf="@id/etDemo"
        android:src="@drawable/img"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/gradient_demo"
        app:layout_constraintTop_toBottomOf="@id/btnHello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>