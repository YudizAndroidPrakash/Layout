<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_header"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/bg_color_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_required_filed_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tool:text="All fields are required!!"
        android:textColor="@color/bg_color_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_error"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/alertBtnStyle"
        android:text="@string/ok"
        app:layout_constraintTop_toBottomOf="@id/tv_required_filed_msg"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>