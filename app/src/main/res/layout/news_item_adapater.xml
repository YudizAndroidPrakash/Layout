<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>
        <variable
            name="newsData"
            type="com.example.demoapp.viewmodlelivedataflow.Articles" />
        <variable
            name="newThumbnail"
            type="String" />

    </data>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_news_thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@{newThumbnail}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_news_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="News Name"
                android:text="@{newsData.source.name}"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/img_news_thumbnail"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                tool:text="News Title"
                android:text="@{newsData.title}"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/img_news_thumbnail"
                app:layout_constraintTop_toBottomOf="@id/tv_news_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
