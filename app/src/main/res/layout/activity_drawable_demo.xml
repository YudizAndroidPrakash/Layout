<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/demoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawableDemo">

    <Button
        android:id="@+id/snkDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Snack Demo"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSnackEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:padding="20dp"
        android:text="Button Clicked"
        android:textColor="@color/teal_200"
        android:textSize="30sp"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/snkDemo" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbfirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_a_photo_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        app:rippleColor="@color/white"
        android:backgroundTint="@color/white"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbsecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_account_balance_24"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/fbfirst"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible"
        android:backgroundTint="@color/white"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbthird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_account_circle_24"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/fbsecond"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible"
        android:backgroundTint="@color/white"/>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fbaWalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/let_s_walk"
        app:icon="@drawable/ic_walk"
        app:iconSize="35dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fbaTrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:visibility="gone"
        app:icon="@drawable/baseline_directions_transit_24"
        app:iconSize="35dp"
        app:layout_constraintBottom_toTopOf="@id/fbaWalk"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fbaMotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:visibility="gone"
        app:icon="@drawable/baseline_electric_car_24"
        app:iconSize="35dp"
        app:layout_constraintBottom_toTopOf="@id/fbaTrain"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>